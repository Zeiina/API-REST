module.exports = (err, req, res, next) => {
  const status = err.status || 500;
  const payload = { error: err.message || 'Server error' };

  if (process.env.NODE_ENV === 'development') {
    payload.stack = err.stack;
    console.error(err);
  }

  res.status(status).json(payload);
};
